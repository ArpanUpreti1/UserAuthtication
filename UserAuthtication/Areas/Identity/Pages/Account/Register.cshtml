@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h1 class="text-center text-3xl font-semibold text-gray-900 mb-8">@ViewData["Title"]</h1>
    </div>

    <div class="sm:mx-auto sm:w-full sm:max-w-6xl">
        <div class="bg-white py-8 px-4 shadow-sm sm:rounded-lg sm:px-10 border border-gray-200">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16">
                <!-- Registration Form -->
                <div class="space-y-6">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="space-y-6">
                        <div>
                            <h2 class="text-xl font-medium text-gray-900 mb-4">Create a new account</h2>
                            <div class="w-full h-px bg-gray-200 mb-6"></div>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md text-sm" role="alert"></div>

                        <!-- First Name and Last Name Row -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="space-y-1">
                                <label asp-for="Input.FirstName" class="block text-sm font-medium text-gray-700">First Name</label>
                                <input asp-for="Input.FirstName"
                                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                       autocomplete="given-name"
                                       aria-required="true"
                                       placeholder="John" />
                                <span asp-validation-for="Input.FirstName" class="text-red-600 text-sm"></span>
                            </div>

                            <div class="space-y-1">
                                <label asp-for="Input.LastName" class="block text-sm font-medium text-gray-700">Last Name</label>
                                <input asp-for="Input.LastName"
                                       class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                       autocomplete="family-name"
                                       aria-required="true"
                                       placeholder="Doe" />
                                <span asp-validation-for="Input.LastName" class="text-red-600 text-sm"></span>
                            </div>
                        </div>

                        <div class="space-y-1">
                            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700">Email</label>
                            <input asp-for="Input.Email"
                                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="name@example.com" />
                            <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="space-y-1">
                            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                            <input asp-for="Input.Password"
                                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                   autocomplete="new-password"
                                   aria-required="true"
                                   placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
                        </div>

                        <div class="space-y-1">
                            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword"
                                   class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                                   autocomplete="new-password"
                                   aria-required="true"
                                   placeholder="Confirm your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
                        </div>

                        <button id="registerSubmit"
                                type="submit"
                                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                            Register
                        </button>
                    </form>
                </div>

                <!-- External Login Section -->
                <div class="space-y-6">
                    <div>
                        <h3 class="text-xl font-medium text-gray-900 mb-4">Use another service to register</h3>
                        <div class="w-full h-px bg-gray-200 mb-6"></div>
                    </div>

                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
                                <div class="text-center">
                                    <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                                    </svg>
                                    <p class="text-gray-600 text-sm leading-relaxed">
                                        There are no external authentication services configured. See this
                                        <a href="https://go.microsoft.com/fwlink/?LinkID=532715"
                                           class="text-blue-600 hover:text-blue-500 underline">
                                            article about setting up this ASP.NET application to support logging in via external services
                                        </a>.
                                    </p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="space-y-3">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit"
                                                class="w-full flex justify-center items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
                                                name="provider"
                                                value="@provider.Name"
                                                title="Log in using your @provider.DisplayName account">
                                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" clip-rule="evenodd" />
                                            </svg>
                                            Continue with @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        }
                    }

                    <!-- Additional Sign In Link -->
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <p class="text-center text-sm text-gray-600">
                            Already have an account?
                            <a asp-area="" asp-controller="Account" asp-action="Login"
                               class="font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200">
                                Sign in here
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}