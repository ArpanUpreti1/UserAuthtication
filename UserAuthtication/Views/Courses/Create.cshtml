@model UserAuthtication.Models.Course
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white min-h-screen">
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-lg mx-auto bg-white border border-gray-300 rounded-lg p-8">
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-black mb-2">Create Course</h1>
                <div class="w-12 h-1 bg-black mb-4"></div>
                <p class="text-gray-700">Enter course details below</p>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="mb-4 p-3 bg-red-50 border border-red-200 rounded text-red-700 text-sm"></div>

                <div class="mb-6">
                    <label asp-for="CourseName" class="block text-black font-semibold mb-2">Course Name</label>
                    <input asp-for="CourseName" class="w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:border-black text-black bg-white" placeholder="Enter course name" />
                    <span asp-validation-for="CourseName" class="text-red-600 text-sm mt-1 block"></span>
                </div>

                <div class="mb-6">
                    <label asp-for="CreditHours" class="block text-black font-semibold mb-2">Credit Hours</label>
                    <input asp-for="CreditHours" class="w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:border-black text-black bg-white" placeholder="Enter credit hours" />
                    <span asp-validation-for="CreditHours" class="text-red-600 text-sm mt-1 block"></span>
                </div>

                <div class="mb-8">
                    <label asp-for="ModuleLeader" class="block text-black font-semibold mb-2">Module Leader</label>
                    <input asp-for="ModuleLeader" class="w-full px-4 py-3 border-2 border-gray-300 rounded-md focus:outline-none focus:border-black text-black bg-white" placeholder="Enter module leader name" />
                    <span asp-validation-for="ModuleLeader" class="text-red-600 text-sm mt-1 block"></span>
                </div>

                <div class="mb-6">
                    <input type="submit" value="Create Course" class="w-full bg-black text-white font-semibold py-3 px-6 rounded-md hover:bg-gray-900 cursor-pointer" />
                </div>
            </form>

            <div class="text-center border-t border-gray-200 pt-6">
                <a asp-action="Index" class="text-gray-600 hover:text-black font-medium">← Back to Course List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}