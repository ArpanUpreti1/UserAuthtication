@{
    ViewData["Title"] = "Home Page";
}

<div class="min-h-screen flex flex-col items-center justify-center bg-black text-white">
    <div class="max-w-2xl w-full text-center py-20">
        <h1 class="text-5xl font-extrabold mb-6 tracking-tight">College Management System</h1>
        <p class="text-xl mb-10 text-gray-200">A modern platform to manage students, courses, and users efficiently.</p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a asp-area="Identity" asp-page="/Account/Login" class="px-8 py-3 bg-white text-black font-semibold rounded-lg shadow hover:bg-gray-200 transition-colors duration-200">Sign In</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="px-8 py-3 border border-white text-white font-semibold rounded-lg hover:bg-white hover:text-black transition-colors duration-200">Register</a>
        </div>
    </div>
</div>
